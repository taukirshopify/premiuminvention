<div class="contact-premium_main">
   <div class="page-width">
      <div class="section-header text-center">

        <h2 class="top_header">
      {{ section.settings.heading_title_2 | escape }}
    </h2>
      <p class="sub_head">
       {{ section.settings.sub_info | escape }}
  
  </p>
      </div>
      <div class="contact-premium_inner">
         
                       
         {% for block in section.blocks %}
         <div class="contact-guide_sec3 contact-guide_same">
            <div class="contact-guide_text">
               <h3>{{block.settings.prehead}}</h3>
              <h2 class="text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading | escape }}
              </h2>
              <p>{{block.settings.cta_label  }}</p>
                </div>
            <div class="contact-guide_img">
              <img src="{{block.settings.image | img_url : 'master' }}">  
           </div>
            
           {%- if block.settings.button_label != blank -%}
              <div class="contact-guide_btn">
                <a href="{{ block.settings.link }}" class="button_contact-guide button button--secondary ">{{ block.settings.button_label  }}</a>
           </div>
            {%- endif -%}
          
         </div>
        {% endfor %}
      </div>
   </div>
</div>
{% schema %}
   {
    "name": "contact guide premium",
    "settings": [
{
      "type": "text",
      "id": "heading_title_2",
      "label": "Top Heading"
    },
   {
      "type": "text",
      "id": "sub_info",
      "label": "Sub Info"
    }
],

 "blocks": [
    {
      "type": "text",
      "name": {
        "en": "text"
      }, 
    "settings": [
          
             {
          "type": "text",
          "id": "prehead",
          "default": "prehead",
          "label": "prehead"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Image with text",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        },
 
          {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
          },
           {
          "type": "text",
          "id": "cta_label",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label":"Image"
        },
         {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "button text"
        },
             { 
          "id": "link",
          "type": "url",
          "label": "Button link"
       }
    
      ]
      
    }
  ],

   "presets": [
       {
         "name": "contact guide premium"
       
       }
      ]
      }
{% endschema %}
{{ 'contact-guide-premium.css' | asset_url | stylesheet_tag }}
