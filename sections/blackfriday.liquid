
<style>

  .main-img img {
    width: 100%;
}
.main-img-c {
    position: relative;
}
@media only screen and (min-width: 750px) {

  img.mobimg-c {
    display: none !important;
}
.deskimg-c{
  width: 100%;
}


.main-img-c a.btn {
  position: absolute;

  left: 5%;
    z-index: 10000000000000000;
    bottom: 29%;
  background: white !important;
  color: #000 !important;
  padding: 15px 25px;
  font-size: 16px;
  line-height: 1; 
     border: 1px solid ;
}
}

@media only screen and (max-width: 749px) {
.deskimg-c{
    display: none !important;
}
img.mobimg-c {
  width: 100%;
}
.main-img-c a.btn {
  position: absolute;
  left: 50%;
  z-index: 100000000000000;
  bottom: 50%;
  margin: -36px;
  border: 1px solid;
 
  background: white !important;
  color: #000 !important;
}
}
</style>

<div class="new-product-section-c">

  <div class="top">
    {% if section.settings.heading != blank %}
      <h2 class="Weather-proof_heading">{{ section.settings.heading }}</h2>
    {% endif %}

      <div class="carousel-start">
          <div class="carousel-main2 slider-navs">
              {%- for block in section.blocks -%}
              <div class="main-img-c">
                {% if block.settings.deskimg != blank %}
                  <img class="deskimg-c" src="{{ block.settings.deskimg | img_url: "master" }}" alt="{{ section.settings.deskimg.alt }}" />
                {% endif %}
                {% if block.settings.mobimg != blank %}
                  <img class="mobimg-c" src="{{ block.settings.mobimg | img_url: "master" }}" alt="{{ section.settings.mobimg.alt }}" />
                {% endif %}

                {% if  block.settings.btn  != blank %}
                  <a href="{{block.settings.url }}" class="btn">{{ block.settings.btn }}</a>
                {% endif %}
    
              </div>
              {% endfor %}
          </div>
        </div>
    

  </div>

</div>
<script>
  
$( document ).ready(function() {

  $('.slider-navs').slick({
    autoplay: true,
    autoplaySpeed: 3000,
   slidesToShow: 1,
   slidesToScroll: 1,
   dots: true,
   infinite: true,
   arrows: false,

   focusOnSelect: true
 });
});
</script>


<style>
 .new-product-section-c  .slick-dots {
    position: absolute;
    bottom: 34px !important;
    display: block;
    width: 100%;
    padding: 0;
    list-style: none;
    text-align: center;
}
ul.slick-dots li.slick-active button {
  background: #013117 !important;
  border-radius: 30px;
}
.new-product-section-c .slick-dots li.slick-active {
 background:  #013117 !important;

}

.new-product-section-c .slick-dots li {
  position: relative;
  display: inline-block;
  width: 20px;
  height: 20px;
  margin: 0 5px;
  padding: 0;
  cursor: pointer;
  border-radius: 30px;
  border: 1px solid #2b48e9 ;
}
@media only screen and (max-width: 750px) {
div#shopify-section-Popup--premium {
  margin-top: -30px;
}

}
</style>
