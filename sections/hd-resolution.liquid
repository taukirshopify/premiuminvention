        "label": "HD Video Poster"
 },
      {
        "type": "video",
        "id": "hd-video-url",
        "label": "HD Video"
 }
    ],       
     "presets": [
  {
    "name": {
      "en": "HD Resolution"
    }
  }
]
  }
  
