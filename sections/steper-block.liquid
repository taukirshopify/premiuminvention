<!-- timeline-area -->
<section class="timeline-area-gg pt-120 pb-120 blue-sky-bg">
  <div class="page-width">
    <div class="timeline position-relative">
      <div class="timeline-line position-absolute start-0 end-0 h-100 m-auto"></div>
      <div class="timeline-list">
        {% for block in section.blocks %}
          {% assign mod = forloop.index | modulo: 2 %}
          {% if mod == 0 %}
            <div class="row align-items-center mb-5 pb-4">
              <div class="col-lg-5 order-2 order-md-1">
                <div class="timeline-image radius-12 overflow-hidden p-1">
                  <img src="{{ block.settings.stpb-image | image_url: width: 635  }}" alt="" class="img-fluid my-image">
                </div>
              </div>
              <div class="col-lg-2 order-1 order-md-2">
                <div class="timeline-dot-circle text-lg-center position-relative">
                  <img src="https://cdn.shopify.com/s/files/1/0249/8949/9437/files/timeline-dot.png?v=1678870453" alt="icon" class="img-fluid my-image">
                </div>
              </div>
              <div class="col-lg-5 order-3 order-md-3">
                <div class="timeline-info">
                  <h4 class="time-caption fs-42 fw-bold text-clr-dark1 mb-30">
                    {{ block.settings['stpb-itemname'] }}
                  </h4>
                  <div class="timeline-intro fs-5 text-clr-dark3 fw-normal">
                    <p>
                      {{ block.settings['stpb-cont'] }}
                    </p>
                    <div class="blog-html">
                      {% if block.settings['stpb-html'] != blank %}
                        {{ block.settings['stpb-html'] }}
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>

          {% else %}
            <div class="row align-items-center mb-5 pb-4">
              <div class="col-lg-5 order-3 order-md-1">
                <div class="timeline-info">
                  <h4 class="time-caption fs-42 fw-bold text-clr-dark1 mb-30">
                    {{ block.settings['stpb-itemname'] }}
                  </h4>
                  <div class="timeline-intro fs-5 text-clr-dark3 fw-normal">
                    <p>
                      {{ block.settings['stpb-cont'] }}
                    </p>
                    <div class="blog-html">
                      {% if block.settings['stpb-html'] != blank %}
                        {{ block.settings['stpb-html'] }}
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-2 order-1 order-md-2">
                <div class="timeline-dot-circle text-lg-center position-relative">
                  <img src="https://cdn.shopify.com/s/files/1/0249/8949/9437/files/timeline-dot.png?v=1678870453" alt="icon" class="img-fluid">
                </div>
              </div>
              <div class="col-lg-5 order-2 order-md-3">
                <div class="timeline-image radius-12 overflow-hidden p-1">
                  <img src="{{ block.settings.stpb-image | image_url: width: 635  }}" alt="" class="img-fluid my-image">
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<!-- / timeline-area -->

{% schema %}
  {
    "name": "Stepper Block",
    "settings": [
       {
        "type": "text",
        "id": "steep-blk",
        "label": "Choose your class"
 }
    ],
     "presets": [
  {
    "name": {
      "en": "Stepper Block"
    }
  }
],
    "blocks": [
  	{
     "name": "Block 1",
     "type": "block-1",
     "settings": [
       {
         "type": "image_picker",
         "id": "stpb-image",
         "label": "Image"
       },
       {
         "type": "text",
         "id": "stpb-itemname",
         "label": "Item Text"
       },
       {
         "type": "richtext",
         "id": "stpb-cont",
         "label": "Item Content"
       },
