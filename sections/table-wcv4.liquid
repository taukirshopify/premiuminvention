<div id="shopify-section-table-data" class=" why-choose-us pt-120 pb-120" style="background:{{ section.settings.sec-bg }}">
  <div class="page-width">
    {%- unless section.settings.heading_title == blank -%}
      <h2 class="section-header">
        {{ section.settings.heading_title | escape }}
      </h2>
    {%- endunless -%}
    <div class="tblecamera" style="max-width: 900px; margin:auto; padding-top:100px;">
      <table>
        <tr>
          <td>{{ section.settings.row1 }}</td>
          <td class="blactoblue">{{ section.settings.row2 }}</td>
          <td class="blcktobrwn">{{ section.settings.row3 }}</td>
        </tr>
        {% for block in section.blocks %}
          <tr>
            <td class="headTb">{{ block.settings.row1 }}</td>
            <td>
              <div class="item-fl">
                <span class="icon-wright">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
