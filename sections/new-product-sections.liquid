<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.8/slick-theme.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.8/slick.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.7/slick.min.js"></script>
<div class="new-product-section">
<div class="page-width">
  <div class="top">
    {% if section.settings.heading != blank %}
      <h2 class="Weather-proof_heading">{{ section.settings.heading }}</h2>
    {% endif %}
<div class="carousel-start mob-only">
    <div class="carousel-main slider-navs">
    {%- for block in section.blocks -%}
    <div class="main-img">
      <img src="{{ block.settings.deskimg | img_url: "master" }}">
    </div>
    {% endfor %}
    </div>
  </div>
    
     {% if section.settings.deskimg != blank %}
      <img class="deskimg" src="{{ section.settings.deskimg | img_url: "master" }}" alt="{{ section.settings.deskimg.alt }}" />
    {% endif %}
    {% if section.settings.mobimg != blank %}
      <img class="mobimg" src="{{ section.settings.mobimg | img_url: "master" }}" alt="{{ section.settings.mobimg.alt }}" />
    {% endif %}
  </div>
  <div class="carousel-start desk-only">
    <div class="carousel-main slider-nav">
    {%- for block in section.blocks -%}
    <div class="main-img">
      <img src="{{ block.settings.deskimg | img_url: "master" }}">
    </div>
    {% endfor %}
    </div>
  </div>
</div> 
</div>
<script>
 $('.slider-nav').slick({
   slidesToShow: 3,
   slidesToScroll: 1,
   dots: true,
   infinite: true,
   arrows: true,
      asNavFor: '.slider-for',
   focusOnSelect: true
 });
  $('.slider-navs').slick({
   slidesToShow: 1,
   slidesToScroll: 1,
   dots: true,
   infinite: true,
   arrows: true,
      asNavFor: '.slider-for',
   focusOnSelect: true
 });
</script>

{% schema %}
  {
    "name": "Carousel Section",
    "settings": [
{
        "type": "text",
        "id": "heading",
        "label": "Add Main Title"
      },
{
        "type": "image_picker",
        "id": "deskimg",
        "label": "Select Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "mobimg",
        "label": "Select Mobile Image"
      }
    ],
  "blocks": [
   {
        "type": "text",
        "name": "text",
        "settings": [
          {
            "type": "image_picker",
            "id": "deskimg",
            "label": "Image"
          }
        ]
      }
  ],
    "presets": [
    {
      "name": "Slider Carousel"
    }
  ]
  }
{% endschema %}

