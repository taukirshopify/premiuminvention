<div id="shopify-section-feature-image-1" {% if section.settings.bg_image != blank %} style="background-image: url({{ section.settings.bg_image | img_url: 'master' }});" {% endif %}>
  <div class="page-width product-page-width feature-row  {% if section.settings.custom_class != blank  %} {{ section.settings.custom_class }} {% endif %} ">
  
  {% capture image_layout %}
    <div class="feature-row__item">
       {% if section.settings.title != blank %}
        <h2 class="hide-desk">{{ section.settings.title | escape }}</h2>
      {% endif %}
	  
	  <div class="faq-sec top-faq">
 <ul class="accordion-list">
    {% for block in section.blocks %}
   <li>
<h3>{{block.settings.que  }} <div class="icon">
  <svg width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M1 1.5L6 6.5L11 1.5" stroke="black" stroke-opacity="0.2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
</svg>

</div>
</h3>
  <div class="faq-content answer" style="">
  {{block.settings.ans  }}
  </div> </li>
  {% endfor %}
 </ul>
  </div>
  
  
      {% if section.settings.image != blank %}
        {% capture img_id %}FeatureRowImage-{{ section.id }}{% endcapture %}
        {% capture wrapper_id %}FeatureRowImageWrapper-{{ section.id }}{% endcapture %}
        {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
        {% include 'image-style' with image: section.settings.image, width: 545, height: 545, small_style: true, wrapper_id: wrapper_id, img_id: img_id %}
        <div id="{{ wrapper_id }}" class="feature-row__image-wrapper js">
          <div style="padding-top:{{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100}}%;">
            <img id="{{ img_id }}"
                 class="feature-row__image lazyload"
                 src="{{ section.settings.image | img_url: 'master' }}"
                 data-src="{{ img_url }}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ section.settings.image.aspect_ratio }}"
                 data-sizes="auto"
                 alt="{{ section.settings.image.alt | escape }}">
          </div>
        </div>

        <noscript>
          {{ section.settings.image | img_url: '600x600', scale: 2 | img_tag: section.settings.image.alt, 'feature-row__image' }}
        </noscript>
    
      {% endif %}
	  
	  {% if   section.settings.text-below != blank %}
      
      <div class="below--txt">
      <div class="text--side">
      {{section.settings.text-below}}
        </div>
        <div class="svg--side">
        <svg width="114" height="80" viewBox="0 0 114 80" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M8.11765 79.2229H32.4706L48.7059 47.5337V0H0V47.5337H24.353L8.11765 79.2229ZM73.0589 79.2229H97.4118L113.647 47.5337V0H64.9412V47.5337H89.2942L73.0589 79.2229Z" fill="#C4C4C4"/>
</svg>

        </div>
      </div>
      {% endif %}
    </div>
  {% endcapture %}

  <div class="feature-row">
    {% if section.settings.layout == 'left' %}
      {{ image_layout }}
    {% endif %}

    <div class="l feature-row__item feature-row__text feature-row__text--{{ section.settings.layout }}">
	
        

      
      {% if section.settings.title != blank %}
        <h2 class="hide-mob">{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rte rte-setting featured-row__subtext">{{ section.settings.text }}</div>
      {% endif %}
     
      
      <div class="faq-sec bottom-faq">
 <ul class="accordion-list desktop">
    {% for block in section.blocks %}
   <li>
<h3>{{block.settings.que  }} <div class="icon">
  <svg width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M1 1.5L6 6.5L11 1.5" stroke="black" stroke-opacity="0.2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
</svg>

</div>
</h3>
  <div class="faq-content answer">
  {{block.settings.ans  }}
  </div> </li>
  {% endfor %}
 </ul>
  </div>
     
    </div>

    {% if section.settings.layout == 'right' %}
      {{ image_layout }}
    {% endif %}
  </div>
</div>
</div>

<script>
  $(document).ready(function(){
   setTimeout(function(){
     $('.accordion-list.desktop li:nth-child(1)').addClass('active')
      $('.accordion-list.desktop li:nth-child(1)').find('.faq-content.answer').show();
   },2000)
  })
</script>

