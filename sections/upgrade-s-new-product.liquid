<div class="upgrade-new-s-main {{ section.settings.extra-class-v4}}">
   <div class="page-width">
      <div class="section-header text-center">

        <h2 class="top_header">
      {{ section.settings.heading_title_2 | escape }}
    </h2>
      </div>
      <div class="upgarde_inner_main">             
         {% for block in section.blocks %}
         <div class="upgrade-new-s ">
            <div class="inner-upgrade-s">
               <h2 class="text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading | escape }}
              </h2>
              <div class="upgarede_img">
              <img  loading="lazy" class="img1" src="{{block.settings.image | img_url : 'master' }}"> 
                {% if block.settings.image2 != black %}
                <img  loading="lazy"  class="img2" src="{{block.settings.image2 | img_url : 'master' }}">  
                  {% endif %}
             </div> 
			 {%- if block.settings.button_label != blank -%}
              <div class="switch_btn">
                <a href="{{ block.settings.link }}" class="button_premium button">{{ block.settings.button_label }}</a>
                 </div>
            {%- endif -%}
             
              {% if block.settings.switch == true %}
             <div class="optionnames--all"> 
            {% assign opt=block.settings.optonname | split : ',' %}
            <div class="opt---cls">{{ opt[0] }}</div>
            <label class="switch">
  <input type="checkbox" checked>
  <span class="slider round"></span>
</label>
            <div class="opt---cls">{{ opt[1] }}</div>
          </div>

               
              {% if  block.settings.opt2 %}
<p class="opt2" style="display:none;">{{ block.settings.opt2 }}</p>
                {% endif %}
                {% endif %}
           <p class="opt1">{{block.settings.cta_label  }}</p>
            </div> 
          
         </div>
        {% endfor %} 
      </div>
   </div>
</div>
{% schema %}
   {
    "name": "upgrade new s product",
    "settings": [
       {
    "type": "text",
    "id": "extra-class-v4",
    "label": "choose your class"
   },
{
      "type": "text",
      "id": "heading_title_2",
      "label": "Top Heading"
    }
],

 "blocks": [
    {
      "type": "text",
      "name": {
        "en": "text"
      }, 
    "settings": [
          {
          "type": "text",
          "id": "heading",
          "default": "Image with text",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
          }, 
          {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
          },

        {
          "type": "image_picker",
          "id": "image",
          "label":"Image"
        },
        {
          "type": "text", 
          "id": "button_label",
          "default": "Button label",
          "label": "button text"
        },

        { 
          "id": "link",
          "type": "url",
          "label": "Button link"
        },{
          "type": "text",
          "id": "cta_label",
          "label": "Text" 
        },{
          "type": "checkbox",
          "id": "switch",
          "label": "switch button" 
        },{
          "type": "text",
          "id": "optonname",
          "label": "option nanme" ,
          "info":"Seprare with comma"
        },{
          "type": "image_picker",
          "id": "image2",
          "label":"Swtich Image"
        },{
          "type": "text",
          "id": "opt2",
          "label": "Description for option2"
        }
      ]
      
    }
  ],

   "presets": [
       {
         "name": "upgrade new s product"
       
       }
      ]
      }
{% endschema %}
