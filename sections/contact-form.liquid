      <div class="field">
        <label class="form__label field__label" for="ContactForm-body">Message</label>
        <textarea
          rows="10"
          id="ContactForm-body"
          class="text-area field__input"
          name="contact[{{ 'templates.contact.form.comment' | t }}]"
          placeholder="{{ 'templates.contact.form.comment' | t }}"
        >
          {{- form.body -}}
        </textarea>    
      </div>
        <div class="field filed_checkbox">
          <input class="field__input" type="checkbox" id="ContactForm-checkbox" name="contact[checkbox]"  value="true"  required>
          <label class="field__label" for="ContactForm-checkbox">*I hereby consent to Premium Invention collecting and using my name, email, and address for identity verification purposes, as further detailed in the Privacy Policy and Terms & Conditions</label>
         </div>
      <div class="contact__fields">
        <div class="field">
          <label class="field__label" for="ContactForm-attachments">Attachments</label>
          <input class="field__input" type="file" id="ContactForm-name" name="contact[attachments]"  placeholder="Attachments">
