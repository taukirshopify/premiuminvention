<section class="mainkey pt-120 pb-120 bg-clr-dark7" style="background: {{ section.settings.section-bg }};">
        <div class="page-width">
            <div class="section-hed text-center">
                <h2 class="cpbsec-title fs-42 text-clr-dark1 fw-bold pb-60">
                   {{ section.settings.section-title }}
                </h2>
            </div>
            <div class="row">
               {% for block in section.blocks %}
                <div class="col-lg-6">
                    <div class=" border-0 mb-4 item-wrap">
                        <div class="card-wrapper row align-items-center">
                            <div class="col-sm-12 col-md-5">
                                <img src="{{ block.settings.cpb-image | image_url: width: 635  }}" class="img-fluid my-image" alt="image">
                            </div>
                            <div class="card-content col-sm-12 col-md-7">
                                <h5 class="card-title fw-bold fs-18 text-clr-dark1 d-inline">
                                  {{ block.settings.cpb-itemname }}
                                </h5>
                                <span class="card-text fw-normal fs-18 text-clr-dark3">
                                   {{ block.settings.stpb-cont }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% schema %}
  {
    "name": "Custome Post Block",
    "settings": [
       {
        "type": "text",
        "id": "section-title",
        "label": "Title"
 },
      {
        "type": "color",
        "id": "section-bg",
        "label": "Background Color"
 }
    ],    
     "presets": [
  {
    "name": {
      "en": "Custome Post Block"
    }
  }
],
    "blocks": [
  	{
     "name": "Block 1",
     "type": "block-1",
     "settings": [
       {
         "type": "image_picker",
         "id": "cpb-image",
         "label": "Image"
       },
       {
         "type": "text",
         "id": "cpb-itemname",
         "label": "Item Text"
       },
       {
         "type": "richtext",
         "id": "stpb-cont",
         "label": "Item Content"
       }     
     ]
    }    
]
  }
{% endschema %}

