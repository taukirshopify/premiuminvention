

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }



.featured-wrapper{
    background: linear-gradient(270deg, #006BB3 16.53%, #73C7FF 92.4%);

}
.singel-icon-wrapper h4
{

    color: #1A1A1A;

text-align: center;
font-family: Work Sans;
font-size: 20px;
font-style: normal;
font-weight: 800;
line-height: 90%; /* 28.8px */
letter-spacing: -0.64px;

}
.singel-icon-wrapper {
    text-align: center;
    background: white;
    border-radius: 17px;
    padding:15px;
    margin:2% 0;
}
.title {
    color: #FFF;
    text-align: center;
    font-family: Work Sans;
    font-size: 48px;
    font-style: normal;
    font-weight: 700;
    line-height: 120%;
    margin: 2rem;
    letter-spacing: -1.92px;
    @media only screen and (max-width: 600px) {

    font-size: 30px;

    }


}

.image-with-text:not(.image-with-text--overlap) .image-with-text__media-item > *, .image-with-text:not(.image-with-text--overlap) .image-with-text__text-item > * {


    @media only screen and (max-width: 600px) {
      padding: 0;
}
}
div#ImageWithText--template--15307791990845__25b4f3f4-eb17-4f36-ba8a-3831d0446b30 {
    display: flex;
    justify-content: center;
}

.visitor--video-2 .image-with-text__heading {
  @media only screen and (max-width: 600px) {
    font-size: 44px;
  }
}
.text-decoration-none{
  text-decoration:none;
}
{%- endstyle -%}


<div class="featured-wrapper">
    <div class="page-width section-{{ section.id }}-padding ">
        <div class="row">
      <div class="col-12">

       <h2 class='title text-center'>{{section.settings.title }}</h2>

      </div>
          {% for item in section.blocks %}
              <div class="col-md-3 col-sm-6 col-12">
  <a href="{{ item.settings.url }}" class="text-decoration-none">                  <div class="singel-icon-wrapper">
                     {{ item.settings.image | image_url: width: 3840 | image_tag:
                      loading: 'lazy',
                      height: '283',  sizes: "100vw", format: 'webp', widths: '100 ,174, 200 ,375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'}}
                    <h4>{{ item.settings.title }}</h4>
                  </div></a>
              </div>
          {% endfor %}
      
       </div>
      </div>
</div>

 {% schema %}
    {
        "name": "Featured Icon",
        "class": "featurd icon",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Select your Title"
          }    ,
       
            {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }    ],
          "blocks": [
            {
                "type": "Icon",
                "name": "Slide",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Select your Image"
                    },
                       {
            "type": "url",
            "id": "url",
            "label": "Select your Url"
          },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Select your title",
                        "default": "WIRELESS",
                       
                        "placeholder": "WIRELESS"
                    }
                ]
            }
          ],
          "presets": [
            {
              "name": "Icon with text"
            }
          ]
          
    }
 {% endschema %}